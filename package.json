{
    "private": true,
    "scripts": {
        "dev": "npm run development",
        "development": "TAILWIND_MODE=build mix",
        "watch": "mix watch",
        "watch-poll": "mix watch -- --watch-options-poll=1000",
        "hot": "mix watch --hot",
        "prod": "npm run production",
        "production": "TAILWIND_MODE=build mix --production",
        "lint": "npm run && npm run lint:styles",
        "lint:styles": "./node_modules/.bin/stylelint \"resources/css/**/*.css\"",
        "fix": "npm run && npm run fix:styles ",
        "fix:styles": "./node_modules/.bin/stylelint \"resources/css/**/*.css\" --fix"
    },
    "dependencies": {
        "@fortawesome/fontawesome-free": "^6.0.0",
        "@tailwindcss/forms": "^0.4.0",
        "@tailwindcss/typography": "^0.5.1",
        "alpinejs": "^3.9.0",
        "tailwindcss": "^3.0.23"
    },
    "devDependencies": {
        "autoprefixer": "^10.4.2",
        "browser-sync": "^2.27.7",
        "browser-sync-webpack-plugin": "^2.3.0",
        "cross-env": "^7.0.3",
        "laravel-mix": "^6.0.41",
        "postcss-import": "^14.0.2",
        "postcss-nested": "^5.0.6",
        "prettier": "2.5.1",
        "resolve-url-loader": "^5.0.0",
        "stylelint": "^14.5.0",
        "stylelint-config-prettier": "^9.0.3",
        "stylelint-config-standard": "^25.0.0",
        "vue-template-compiler": "^2.6.14"
    }
}

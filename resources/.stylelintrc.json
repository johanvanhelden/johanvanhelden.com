{
    "extends": [
        "stylelint-config-standard",
        "stylelint-config-prettier"
    ],
    "rules": {
        "declaration-no-important": true,
        "color-named": [
            "never",
            {
                "ignore": [
                    "inside-function"
                ]
            }
        ],
        "no-invalid-position-at-import-rule": null,
        "selector-max-specificity": "0,3,0",
        "selector-class-pattern": null,
        "at-rule-no-unknown": [
            true,
            {
                "ignoreAtRules": [
                    "extends",
                    "tailwind",
                    "screen",
                    "layer"
                ]
            }
        ]
    }
}

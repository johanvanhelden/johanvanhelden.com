{
    "private": true,
    "scripts": {
        "dev": "npm run development",
        "development": "cross-env NODE_ENV=development node_modules/webpack/bin/webpack.js --progress --hide-modules --config=node_modules/laravel-mix/setup/webpack.config.js",
        "watch": "npm run development -- --watch",
        "watch-poll": "npm run watch -- --watch-poll",
        "hot": "cross-env NODE_ENV=development node_modules/webpack-dev-server/bin/webpack-dev-server.js --inline --hot --disable-host-check --config=node_modules/laravel-mix/setup/webpack.config.js",
        "prod": "npm run production",
        "production": "cross-env NODE_ENV=production node_modules/webpack/bin/webpack.js --no-progress --hide-modules --config=node_modules/laravel-mix/setup/webpack.config.js",
        "lint": "npm run lint:prettier && npm run && npm run lint:styles",
        "lint:prettier": "./node_modules/.bin/prettier --check \"resources/css/**/*.css\"",
        "lint:styles": "./node_modules/.bin/stylelint \"resources/css/**/*.css\"",
        "fix": "npm run fix:prettier && npm run && npm run fix:styles ",
        "fix:prettier": "./node_modules/.bin/prettier --write \"resources/css/**/*.css\"",
        "fix:styles": "./node_modules/.bin/stylelint \"resources/css/**/*.css\" --fix"
    },
    "dependencies": {
        "@fortawesome/fontawesome-free": "^5.14.0",
        "alpinejs": "^2.7.0",
        "tailwindcss": "^1.7.3"
    },
    "devDependencies": {
        "autoprefixer": "^9.6.1",
        "browser-sync": "^2.26.7",
        "browser-sync-webpack-plugin": "^2.2.2",
        "cross-env": "^5.2.1",
        "laravel-mix": "^5.0.0",
        "postcss-import": "^12.0.1",
        "postcss-nested": "^4.2.3",
        "prettier": "1.18.2",
        "resolve-url-loader": "^3.1.0",
        "stylelint": "^10.1.0",
        "stylelint-config-standard": "^18.3.0",
        "stylelint-order": "^3.1.0",
        "vue-template-compiler": "^2.6.12"
    }
}

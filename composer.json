{
    "name": "johanvanhelden/johanvanhelden.com",
    "description": "My personal website.",
    "type": "project",
    "license": "gpl-3.0",
    "require": {
        "php": "^8.1",
        "guzzlehttp/guzzle": "^7.2",
        "laracasts/flash": "^3.0",
        "laravel/framework": "^9.0",
        "laravel/horizon": "^5.0",
        "league/commonmark": "^2.0",
        "livewire/livewire": "^2.6",
        "predis/predis": "^1.1",
        "sentry/sentry-laravel": "^2.0",
        "spatie/laravel-queueable-action": "^2.6",
        "symfony/http-client": "^6.0",
        "symfony/mailgun-mailer": "^6.0"
    },
    "require-dev": {
        "barryvdh/laravel-debugbar": "^3.5",
        "barryvdh/laravel-ide-helper": "^2.8",
        "brianium/paratest": "^6.2",
        "fakerphp/faker": "^1.9.1",
        "laravel/dusk": "^6.6",
        "laravel/tinker": "^2.7",
        "mockery/mockery": "^1.4.4",
        "nunomaduro/collision": "^6.1",
        "nunomaduro/larastan": "^2.0",
        "phpunit/phpunit": "^9.5.10",
        "spatie/laravel-ignition": "^1.0",
        "spatie/laravel-web-tinker": "^1.7.5"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "php-http/discovery": true
        }
    },
    "extra": {
        "laravel": {
            "dont-discover": [
                "laravel/dusk"
            ]
        }
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi"
        ],
        "post-update-cmd": [
            "@php artisan vendor:publish --tag=laravel-assets --ansi --force",
            "@php artisan horizon:publish --ansi",
            "@php artisan vendor:publish --tag=web-tinker-assets --force --ansi",
            "@php artisan vendor:publish --force --tag=livewire:assets --ansi"
        ],
        "test": [
            "@php artisan test --parallel"
        ],
        "test-coverage": [
            "@php -d pcov.enabled=1 ./vendor/bin/phpunit --coverage-html public/tests-report"
        ],
        "test-browser": [
            "@php artisan dusk"
        ]
    }
}
